<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.retrofitrecycleview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Retrofitrecycleview"
        tools:targetApi="31">
        <activity
            android:name=".ui.Weather.WeatherActivity"
            android:exported="false" />
        <activity
            android:name=".ui.makeup.MakeupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sport.DisplaySportActivity"
            android:exported="false" />
        <activity
            android:name=".ui.EntertainmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sport.SportsActivity"
            android:exported="false" />
        <activity android:name=".ui.news.NewsItemActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.retrofitrecycleview.ui.news.MainActivity" />
        </activity>
        <activity
            android:name=".ui.news.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>