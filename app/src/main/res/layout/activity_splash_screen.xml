<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreen"
    android:background="#fece2f">

    <ImageView
        android:id="@+id/splash_iamge"
        android:layout_width="240dp"
        android:layout_height="310dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toTopOf="@+id/splash_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/children" />

    <TextView
        android:id="@+id/splash_text1"
        android:layout_width="204dp"
        android:layout_height="66dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/bangers"
        android:text="The Bull's rent"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_iamge" />

    <TextView
        android:id="@+id/splash_text2"
        android:layout_width="249dp"
        android:layout_height="35dp"
        android:text="Nation wide corrental App "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/splash_text1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/splash_text1"
        app:layout_constraintTop_toBottomOf="@+id/splash_text1" />
</androidx.constraintlayout.widget.ConstraintLayout>