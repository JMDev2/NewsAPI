<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:elevation="3dp"
            tools:layout_marginEnd="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="366dp"
                android:layout_height="186dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="34dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="20dp">

                    <TextView
                        android:id="@+id/makeup_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="68dp"
                        android:text="TextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/makeup_image" />

                    <TextView
                        android:id="@+id/makeup_product_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="@+id/makeup_image"
                        app:layout_constraintEnd_toEndOf="@+id/makeup_category"
                        app:layout_constraintStart_toStartOf="@+id/makeup_category"
                        app:layout_constraintTop_toBottomOf="@+id/makeup_category"
                        app:layout_constraintVertical_bias="0.196" />

                    <ImageView
                        android:id="@+id/makeup_image"
                        android:layout_width="150dp"
                        android:layout_height="99dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="31dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/makeup_category"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/makeup_name"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/makeup_name"
                        android:layout_width="321dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="13dp"
                        android:padding="5dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/makeup_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>